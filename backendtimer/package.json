{
  "name": "aisiri-backend",
  "version": "1.0.0",
  "description": "AIsiri 应用后端API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test MOCK_LLM=true MOCK_DB=true jest --runInBand",
    "test:ai": "node src/AIsiri/tests/run_tests.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1",
    "openai": "^5.12.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "cross-env": "^7.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js",
      "**/src/**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/test/collection.test.js",
      "<rootDir>/test/integration.test.js"
    ]
  }
}
